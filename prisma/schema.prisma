generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  ADMIN
  EMPLOYEE
}

enum PaymentType {
  FIXED
  HOURLY
}

enum FixedCostType {
  TOTAL
  MONTHLY
}

enum ProjectStatus {
  ACTIVE
  ARCHIVED
  PLANNED
}

enum TimeLogType {
  WORK
  VACATION
}

model User {
  id                    String              @id @default(uuid())
  name                  String
  lastName              String
  email                 String              @unique
  password              String
  role                  Role                @default(EMPLOYEE)
  monthlyCost           Float?
  remainingVacationDays Int?                @default(0)
  ownedProjects         Project[]           @relation("ProjectOwner")
  assignments           ProjectAssignment[]
  timeLogs              TimeLog[]
}

model Project {
  id                String              @id @default(uuid())
  name              String
  description       String?
  startDate         DateTime?
  endDate           DateTime?
  paymentType       PaymentType         @default(HOURLY)
  totalProjectPrice Float?
  fixedCostType     FixedCostType?
  totalFixedCost    Float?
  status            ProjectStatus       @default(PLANNED)
  ownerId           String
  owner             User                @relation("ProjectOwner", fields: [ownerId], references: [id])
  assignments       ProjectAssignment[]
  timeLogs          TimeLog[]
}

model ProjectAssignment {
  id         String    @id @default(uuid())
  userId     String
  projectId  String
  dailyHours Float     @default(8)
  startDate  DateTime?
  endDate    DateTime?
  user       User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  project    Project   @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@unique([userId, projectId])
}

model TimeLog {
  id        String      @id @default(uuid())
  userId    String
  projectId String?
  date      DateTime
  hours     Float
  type      TimeLogType @default(WORK)
  user      User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  project   Project?    @relation(fields: [projectId], references: [id], onDelete: SetNull)
}
